  <filter>
     <filter-name>xxs-firewall</filter-name>
     <filter-class>com.myunihome.myxapp.xss.filter.XSSFilter</filter-class>
</filter>

<filter-mapping>
    <filter-name>xxs-firewall</filter-name>
    <url-pattern>/*</url-pattern>

</filter-mapping> 
  <filter>
    <filter-name>sessionFilter</filter-name>
    <filter-class>com.myunihome.myxapp.paas.unisession.filter.CacheSessionFilter</filter-class>
    <init-param>
      <param-name>ignore_suffix</param-name>
      <param-value>.png,.jpg,.jpeg,.gif,.css,.js,.html,.htm</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>sessionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

 <listener>
	<listener-class>org.jasig.cas.client.session.SingleSignOutHttpSessionListener</listener-class>
</listener>

 <filter>
  	<filter-name>ssoProxyFilter</filter-name>
  	<filter-class>com.myunihome.myxapp.sso.client.filter.FilterChainProxy</filter-class>
  	<init-param>
      <param-name>ignore_resources</param-name>
      <param-value>.png,.jpg,.jpeg,.gif,.css,.js,.html,.htm,index.jsp,/runner-bis-crm-web/,bis-crm/</param-value>
    </init-param>
  </filter>
  <filter-mapping>
  	<filter-name>ssoProxyFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
 
  <filter>
  	<filter-name>assembleUserInfoFilter</filter-name>
  	<filter-class>com.myunihome.myxapp.web.system.filter.AssembleUserInfoFilter</filter-class>
  	<init-param>
      <param-name>ignore_suffix</param-name>
      <param-value>.png,.jpg,.jpeg,.gif,.css,.js,.html,.htm,index.jsp,/runner-bis-crm-web/,bis-crm/</param-value>
    </init-param>
  </filter>
  <filter-mapping>
  	<filter-name>assembleUserInfoFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.myunihome.myxapp.framepage.sitemesh.ParamConfigurableSiteMeshFilter</filter-class>
		<init-param>
	      <param-name>ignore_suffix</param-name>
	      <param-value>.png,.jpg,.jpeg,.gif,.css,.js,.html,.htm,login,stafflogin,userlogin,login.jsp,stafflogin.jsp,userlogin.jsp</param-value>
	    </init-param>
	</filter>

	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
